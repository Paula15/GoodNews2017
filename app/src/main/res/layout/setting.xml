<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Switch
        android:id="@+id/isNightMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="NightMode"
        android:layout_centerHorizontal="true"
        android:textOn="On"
        android:textOff="Off"
        android:layout_gravity="center"
        android:textSize="25sp"/>
    <Switch
        android:id="@+id/isShowPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="ShowPicture"
        android:layout_centerHorizontal="true"
        android:textOn="On"
        android:textOff="Off"
        android:layout_gravity="center"
        android:textSize="25sp"/>
    <EditText
        android:id="@+id/writeShieldWord"
        style="@style/Widget.AppCompat.EditText"
        android:layout_gravity="center"
        android:layout_width="85dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/submitShieldWord"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/accent"
        android:text="Submit"/>
    <TextView
        android:id="@+id/shieldWords"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
